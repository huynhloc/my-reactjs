{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "incremental": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "typeRoots": [
      "./type",
      "./node_modules/@types/"
    ],
    "types": [
      "node",
      "jest"
    ],
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true
  },
  "plugins": [
    {
      "name": "typescript-tslint-plugin"
    }
  ],
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
